<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-gui-script minSpecVersion="1">
    <title>EventQL</title>
    <organization>io.eventql</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />
    <welcome file="welcome.html"    mime-type="text/html" />
    <license file="license.html"    mime-type="text/html" />
    <choices-outline>
        <line choice="io.eventql.eventql"/>
    </choices-outline>
    <choice
        id="io.eventql.eventql"
        visible="false"
        title="EventQL"
        description="The EventQL Database"
        start_selected="true">
      <pkg-ref id="io.eventql.eventql.base.pkg"/>
    </choice>
    <pkg-ref id="io.eventql.eventql.base.pkg" version="0" auth="root">#base.pkg</pkg-ref>
</installer-gui-script>
